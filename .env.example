# AI Landscape Designer Environment Variables

# Gemini API Key (required for AI image generation)
VITE_GEMINI_API_KEY=your-gemini-api-key-here

# Resend API Key (required for contact form emails - server-side only)
# Get from https://resend.com/api-keys (starts with 're_')
RESEND_API_KEY=re_your_actual_api_key_here

# Cloudinary Configuration (required for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-cloudinary-upload-preset

# Clerk Configuration (required for authentication)
VITE_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key

# Database URL (for production deployments)
DATABASE_URL=your-database-url-here

# Polar Configuration (required for payments)
POLAR_ACCESS_TOKEN=your_polar_access_token_here
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret_here

# Application URLs
VITE_APP_URL=https://ai-landscapedesigner.com
POLAR_WEBHOOK_URL=https://ai-landscapedesigner.com/api/webhooks/polar
POLAR_SUCCESS_URL=https://ai-landscapedesigner.com/subscription/success
POLAR_CANCEL_URL=https://ai-landscapedesigner.com/pricing

# Polar.sh Product IDs (replace with actual product IDs from Polar dashboard)
POLAR_PERSONAL_PRODUCT_ID=your_personal_product_id
POLAR_CREATOR_PRODUCT_ID=your_creator_product_id
POLAR_BUSINESS_PRODUCT_ID=your_business_product_id

# Polar.sh Price IDs (replace with actual price IDs from Polar dashboard)
VITE_POLAR_PRICE_PERSONAL_MONTHLY=your_personal_monthly_price_id
VITE_POLAR_PRICE_CREATOR_MONTHLY=your_creator_monthly_price_id
VITE_POLAR_PRICE_BUSINESS_MONTHLY=your_business_monthly_price_id
VITE_POLAR_PRICE_PERSONAL_ANNUAL=your_personal_annual_price_id
VITE_POLAR_PRICE_CREATOR_ANNUAL=your_creator_annual_price_id
VITE_POLAR_PRICE_BUSINESS_ANNUAL=your_business_annual_price_id